<h1>Edit Bookmark</h1>

 <div class="row">
     <%= form_for [@topic, @bookmark] do |f| %>
       <div class="form-group">
         <%= f.label :url %>
         <%= f.text_field :url, class: 'form-control', placeholder: "Enter bookmark URL" %>
       </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
     <% end %>
   </div>
 </div>